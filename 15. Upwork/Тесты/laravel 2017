    ▪ Ответ

        Form::select(
          'myselect',
          array_merge(['' => ['label' => 'Please Select', 'disabled' => true], $categories),
          $myselectedcategories,
          array(
            'class' => 'form-control',
            'id' => 'myselect'
          )
        }}


